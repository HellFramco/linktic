{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "jsx": "react-jsx",

    "module": "ESNext",
    "moduleResolution": "bundler",

    "allowImportingTsExtensions": true,     // OK aquí porque hay noEmit: true
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,                         // ← importante para que allowImportingTsExtensions funcione

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["./src/api/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@pages/*": ["./src/pages/*"],
      "@types/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],
      "@services/*": ["./src/api/services/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true
  },
  "include": [
    "src",
    "tailwind.config.js",
    "postcss.config.js"
    // NO incluyas vite.config.ts aquí (eso va en tsconfig.node.json)
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}